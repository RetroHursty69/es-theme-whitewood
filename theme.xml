         <fontSize>0.025</fontSize>       
         <textColor>000000</textColor>
         <iconColor>000000</iconColor>
      </helpsystem>
   </view>

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <pos>0.2875 0.175</pos>
         <size>0.45 0.7</size>
         <selectorColor>EDEDED</selectorColor>
         <selectedColor>000000</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./_inc/fonts/impact.ttf</fontPath>
         <fontSize>0.04</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>center</alignment>
      </textlist>
   </view>

   <view name="basic">
      <image name="logo">
